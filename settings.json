{
  // Set how the editor starts up
  "workbench.startupEditor": "newUntitledFile",
  // Set default theme
  "workbench.colorTheme": "Dracula",
  // Set theme of icons in sidebar
  "workbench.iconTheme": "material-icon-theme",
  // Set editor font
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  // Set up automatic text formatting
  "editor.formatOnSave": true,
  "eslint.autoFixOnSave": true,
  "tslint.autoFixOnSave": true,
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  // Applies a visual signal to the left of the selected line
  "editor.renderLineHighlight": "gutter",
  // Set default windows terminal
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
  // Sets the default tab size
  "editor.tabSize": 2,
  // Set default window zoom
  "window.zoomLevel": 0,
  // Disable publisher recommendations
  "extensions.ignoreRecommendations": false,
  // Configure react file syntax
  "emmet.syntaxProfiles": {
    "javascript": "jsx",
    "nunjucks": "html"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "nunjucks": "html"
  },
  // Disable file move updates
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  // Enable debug logging mode
  "typescript.tsserver.log": "verbose",
  // Enable navigation breadcrumbs
  "breadcrumbs.enabled": true,
  // Enable documentation
  "editor.parameterHints.enabled": false,
  // Enable smart commit
  "git.enableSmartCommit": true,
  // Configure operating system folder options
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false
}
